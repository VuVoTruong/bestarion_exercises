<%= form_with model: user do |form| %>
  <%= render 'shared/error_messages', obj: user %>

  <div>
    <%= form.label :username %><br>
    <%= form.text_field :username %>
  </div>
  
  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %><br>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>